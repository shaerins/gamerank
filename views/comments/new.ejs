<%- include ("../partials/header") -%>
<div class="container topOfPageBig">
  <div class="row">

    <div class="col"></div>

    <div class="col-sm-10 col-md-8 col-lg-5">
      <div class="card shadow">
        <div class="card-body">
          <h2 class="text-center">Add New Comment to <b><%= game.name %></b></h2>
          <form action="/games/<%= game._id %>/comments" method="POST" autocomplete="off">
            <div class="form-group">
              <textarea class="form-control" type="text" name="comment[text]" placeholder="text" rows="5" required></textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-large btn-success btn-block">Submit</button>
            </div>
          </form>
          <a href="/games/<%= game._id %>">Go back</a>
        </div>
      </div>
    </div>

    <div class="col"></div>
  </div>

</div>

<%- include ("../partials/footer") -%>
