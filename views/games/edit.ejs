<%- include ("../partials/header") %>

<div class="container">
  <div class="row justify-content-center">
    <h2 class="col-md-12 text-center">Edit <b><%= game.name %></b></h2>
    <div class="col-xs-12 col-md-5">
      <!-- need to override the method POST using method-override package bc html doesn't allow for PUT methods -->
      <form action="/games/<%= game._id %>?_method=PUT" method="POST" autocomplete="off" >
        <div class="form-group">
          <label>Title</label>
          <input class="form-control" type="text" name="game[name]" value="<%= game.name %>" required>
        </div>
        <div class="form-group">
          <label>Description</label>
          <textarea rows="4" class="form-control" type="text" name="game[desc]" required><%= game.desc %></textarea>
        </div>
        <div class="form-group">
          <label>Price</label>
          <input class="form-control" type="number" name="game[price]" value="<%= game.price %>" placeholder="0.00" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <label>Image</label>
          <input class="form-control" type="text" name="game[image]" value="<%= game.image %>" required>
        </div>
        <div class="form-group">
          <button class="btn btn-large btn-success btn-block">Submit</button>
        </div>
      </form>
      <a href="/games/<%= game._id %>">Go back</a>
    </div>
  </div>
</div>

<%- include ("../partials/footer") %>
