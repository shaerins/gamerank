<%- include ("../partials/header") %>

<div class="row justify-content-center">
  <h2 class="col-md-12 text-center">Add a New Game</h2>
  <div class="col-xs-12 col-md-5">
    <form action="/games" method="POST" autocomplete="off" >
      <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="name" placeholder="Pac-Man">
      </div>
      <div class="form-group">
        <label>Description</label>
        <textarea class="form-control" rows="4" type="text" name="desc" placeholder="Pac-Man is a maze arcade game developed and released by Namco in 1980."></textarea>
      </div>
      <div class="form-group">
        <label>Price</label>
        <input class="form-control" type="number" name="price" placeholder="0.00" min="0.01" step="0.01">
      </div>
      <div class="form-group">
        <label>Image</label>
        <input class="form-control" type="text" name="image" placeholder="https://images.unsplash.com/...">
      </div>
      <div class="form-group">
        <button class="btn btn-large btn-success btn-block">Submit</button>
      </div>
    </form>
    <a href="/games">Go back</a>
  </div>
</div>

<%- include ("../partials/footer") %>
